<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TestLoginActivity" >

    <!-- Login form -->

    <ScrollView
        android:id="@+id/connection_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/connection_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="CONNECTION"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/connection_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL"
                android:inputType="textUri"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/connection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Connection Name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />
            
            <CheckBox 
                android:id="@+id/save_login_credentials_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save username and password"/>
            
            <TextView
                android:id="@+id/login_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="LOGIN DETAILS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:visibility="gone" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_username"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</merge>